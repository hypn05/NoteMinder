{
  "name": "noteminder",
  "version": "1.1.4",
  "description": "Desktop note-taking application with collapsible sidebar",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "release": "./scripts/release.sh"
  },
  "keywords": [
    "notes",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.noteminder.app",
    "productName": "NoteMinder",
    "publish": {
      "provider": "github",
      "owner": "hypn05",
      "repo": "NoteMinder"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles/**/*",
      "components/**/*",
      "utils/**/*",
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "LSUIElement": true
      }
    },
    "win": {
      "icon": "build/icon512x512.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NoteMinder",
      "runAfterFinish": true,
      "warningsAsErrors": false,
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US"
      ],
      "perMachine": false,
      "allowElevation": true
    },
    "linux": {
      "icon": "build/icon512x512.png",
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
